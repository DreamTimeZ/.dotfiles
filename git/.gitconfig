[core]
	eol = lf
	autocrlf = input
	editor = nvim
	excludesfile = ~/.gitignore_global
	# Treat spaces before tabs and all kinds of trailing whitespace as an error
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
	# Make `git rebase` safer on macOS
	trustctime = false
	# Speed up commands involving untracked files such as `git status`
	untrackedCache = true
	# Use delta as the pager
	pager = delta
	filemode = false
	fscache = true
	fsmonitor = true

[init]
	defaultBranch = main

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto

[push]
	# Push only the current branch to the remote it tracks
	default = simple
	# Automatically resolve merge conflicts in favor of our version when pulling
	autoSetupRemote = true

[fetch]
	# Remove remote-tracking branches that no longer exist on the remote
	prune = true

[diff]
	# Use better, descriptive initials (c, i, w) instead of a/b
	mnemonicPrefix = true
	# Detect copies as well as renames
	renames = copies
	# Show blocks of moved text as distinguished from wholly added/deleted
	colorMoved = default

[merge]
	# Include summaries of merged commits in newly created merge commit messages
	log = true
	# Better conflict markers with diff3
	conflictstyle = diff3

[help]
	# Automatically correct and execute mistyped commands
	autocorrect = 1

[include]
    path = ~/.gitconfig.local

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	features = decorations
	side-by-side = true
	line-numbers = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
