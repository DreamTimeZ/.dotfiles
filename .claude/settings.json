{
  "cleanupPeriodDays": 120,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:docs.astral.sh)",
      "WebFetch(domain:docs.python.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:man7.org)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:wiki.archlinux.org)",

      "Bash(basename:*)",
      "Bash(chmod:*)",
      "Bash(command -v:*)",
      "Bash(curl:*)",
      "Bash(diff:*)",
      "Bash(dirname:*)",
      "Bash(eza:*)",
      "Bash(fd:*)",
      "Bash(jq:*)",
      "Bash(ln:*)",
      "Bash(mkdir:*)",
      "Bash(readlink:*)",
      "Bash(realpath:*)",
      "Bash(rg:*)",
      "Bash(shellcheck:*)",
      "Bash(sort:*)",
      "Bash(wc:*)",
      "Bash(xargs:*)",
      "Bash(yq:*)",

      "Bash(docker:*)",
      "Bash(docker compose:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(node:*)",
      "Bash(pnpm:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(uv:*)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.local)",
      "Read(**/.env.*.local)",
      "Read(**/.env.production)",
      "Read(**/.env.staging)",
      "Read(**/secrets/**)",
      "Read(**/.ssh/**)",
      "Read(**/.aws/**)",
      "Read(**/.gcloud/**)",
      "Read(**/.gnupg/**)",
      "Read(**/.kube/**)",
      "Read(**/.docker/config.json)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*_rsa)",
      "Read(**/*_ed25519)",
      "Read(**/*_ecdsa)",
      "Read(**/node_modules/**)",
      "Read(**/build/**)",
      "Read(**/out/**)",
      "Read(**/.next/**)",
      "Read(**/dist/**)",
      "Read(**/target/**)",
      "Read(**/__pycache__/**)"
    ]
  }
}
